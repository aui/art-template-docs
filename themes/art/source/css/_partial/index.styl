$width = 900px
$space = 50px

#mobile-bar
    &.top
        background-color transparent
        box-shadow none
        .logo
            display none
#page-home .mobile-nav-toggle-bar
  background: #FFF
#about
    background-color $color-art
    text-align center
    min-height 350px
    height calc(100vh - 59px)
    display flex
    align-items center
    position relative
    .inner
        max-width width
        margin 0 auto
    h1
        font-weight 300
        font-size 2.5em
        letter-spacing: 5px
        margin: 0
        text-transform: uppercase
        color: #fff
        @media $mq-tablet
            font-size 4em
        @media $mq-normal
            font-size 5em
    h2
        font-weight 300
        font-size 1.5em
        line-height: 1em
        margin: 0.5em 0 0 0
        color #fff
        @media $mq-tablet
            font-size 2em
        @media $mq-normal
            font-size 2.5em
    .buttons
        margin: 30px 0 0 0
    .button
        padding 0.75em 2em
        border-radius 2em
        display inline-block
        color #fff
        transition all .15s ease
        box-sizing border-box
        margin 1em 0
        font-size 1.05em
        font-weight 600
        letter-spacing .1em
        border 1px solid #FFF
        text-decoration none
        &:first-child
            margin-right 1em
    .button.start
        background #FFF
        color $color-art
    .button.github
        background transparent
    &::after
        color #FFF
        content 'â€º'
        font-size 3em
        width 3em
        text-align center
        position absolute
        bottom 0
        left 50%
        margin-left -1.5em
        z-index 2
        transform rotate(90deg);
#features 
    text-align center
    img 
        width 100%
        height auto
    .feature
        padding $space 40px 30px
        background linear-gradient(#fff, #FDFDFD, #F7F7F7)
    h2
        font-size 3em
        font-weight 300
    @media $mq-normal
        .feature
            padding 100px 0 110px 0
        img 
            width: auto  
#github
    padding $space 40px 30px
    text-align: center
